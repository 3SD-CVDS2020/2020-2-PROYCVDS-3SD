<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
                     
<mapper namespace="edu.eci.cvds.sampleprj.mybatis.Mappers.UserMapper">

    
    <resultMap type='Usuario' id='UsuarioResult'>
        <id property='id' column='id'/>        
        <result property='estado' column='estado'/>
        <result property='correo' column='correo'/>
        <result property='clave' column='clave'/>
		<result property='carnet' column='carnet'/>
		<result property='semestre' column='semestre'/>
    </resultMap>
  	
  	<insert id="registrarUsuario" parameterType="map">
		INSERT INTO usuario VALUES(#{usuario.id},#{usuario.estado},#{usuario.correo},#{usuario.clave},#{usuario.carnet},#{usuario.semestre});
	</insert>
	
</mapper>