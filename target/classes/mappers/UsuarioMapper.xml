<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
                     
<mapper namespace="edu.eci.cvds.persistence.mybatisimpl.mappers.UsuarioMapper">

    
    <resultMap type='Usuario' id='UsuarioResult'>
        <id property='usuario' column='usuario'/>        
        <result property='estado' column='estado'/>
        <result property='correo' column='correo'/>
        <result property='contrasena' column='contrasena'/>
		<result property='carnet' column='carnet'/>
		<result property='semestre' column='semestre'/>
    </resultMap>
  	
  	<select id="buscarUsuarios" resultMap="UsuaropResult">
		SELECT
			u.usuario,
			u.estado,
			u.correo,
			u.contrasena,
			u.carnet,
			u.semestre
		FROM
			USUARIO as u
	</select>
	
</mapper>